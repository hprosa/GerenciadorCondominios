@model GerenciadorCondominios.ViewModels.RegistroViewModel
@{
    Layout = null;
    ViewData["Title"] = "Cadastro de moradores";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Novo morador</title>

    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body class="corpo">

    <div class="registroform">
        <div class="center-align">
            <h4><i class="large material-icons">acount_circle</i></h4>
            <h5>Novo morador</h5>
        </div>

        <div>
            <form asp-action="Registro" enctype="multipart/form-data">
                <div class="campos">
                    <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Nome" class="validate" id="Nome" />
                            <label asp-for="Nome" id="Nome"></label>
                            <asp asp-validation-for="Nome" class="red-text text-darken-4"></asp>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="CPF" class="validate" id="CPF" />
                            <label asp-for="CPF" id="CPF"></label>
                            <asp asp-validation-for="CPF" class="red-text text-darken-4"></asp>
                        </div>
                    </div>

                    <div class="row">
                        <div class="file-field input-field col s12">
                            <div class="btn-small">
                                <span Selecione sua foto />
                                <input asp-for="Foto" type="file" class="validate" id="foto" />
                            </div>

                            <div class="file-path-wrapper">
                                <input class="file-path-validate" type="text"/>
                            </div>
                            
                        </div>
                    </div>

                    
                    <div class="input-field col s12">
                        <input asp-for="Telefone" class="validate" id="Telefone" />
                        <label asp-for="Telefone" id="Telefone"></label>
                        <asp asp-validation-for="Telefone" class="red-text text-darken-4"></asp>
                    </div>
                </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Email" class="validate" type="email" id="Email" />
                            <label asp-for="Email" id="Email"></label>
                            <asp asp-validation-for="Email" class="red-text text-darken-4"></asp>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Senha" class="validate" type="password" id="Senha" />
                            <label asp-for="Senha" id="Senha"></label>
                            <asp asp-validation-for="Senha" class="red-text text-darken-4"></asp>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="SenhaConfirmada" class="validate" type="password" id="SenhaConfirmada" />
                            <label asp-for="SenhaConfirmada" id="SenhaConfirmada"></label>
                            <asp asp-validation-for="SenhaConfirmada" class="red-text text-darken-4"></asp>
                        </div>
                    </div>
                                
            </form>
        </div>
    </div>


    <environment include="Developement">
        <script src="https://code.jquery.com/jquery-3.5.1.js"</script></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.js"></script>
    </environment>

    <environment exclude="Developement">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"</script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </environment>
</body>
</html>
